%VARIABLES
        XDAT  = WX-TODAYS-DATE
%* get yesterday
      YDATT = DATE2 of MSSDAT -
               where (OPTION    =  '1',   -
                      DATE1     =  XDAT,  -
                      DAYS      = -1)
%*
%* setup if date range to default
%* i.e. if no input parameter for 'to' date, use yesterday's date (YDATT)
      CDATT = choose (YDATT IF (%ITODTE% = '        '), -
                      YDATT IF (%ITODTE% = '00000000'), -
                      %ITODTE%) I-PIC (9(8))
%* i.e. if no input parameter for 'from' date, use yesterday's date (YDATT)
      CDATF = choose (YDATT IF (%IFRDTE% = '        '), -
                      YDATT IF (%IFRDTE% = '00000000'), -
                      %IFRDTE%) I-PIC (9(8))
%* set a variable if required
%* if date on MSF034 file is with the 'from' and 'to' dates,
%* then set print parameter to 'Y'
      CDTE  = choose ('Y' IF (DATE-GMT >= CDATF AND DATE-GMT <= CDATT), -
                      'N')
%*
       EMPF   = USER-ID
       EMP    = substr (EMPF,2,5)       D-PIC (X(5))
       EMPID  = catenate ('00000',EMP)  D-PIC (X(10))
       PG     = PAY-GROUP OF MSF820 -
                     WHERE (EMPLOYEE-ID = EMPID)
       SNAME  = SURNAME OF MSF810 - 
                     WHERE (EMPLOYEE-ID = EMPID)
       FNAME  = FIRST-NAME  VIA (SNAME)
       NAME   = catenate (SNAME,' ',FNAME)
       ENAME  = OUT-STRING OF MSSCNV -
                     WHERE (OPTION     = 'P', -
                            INP-STRING = NAME)
       PFLAG  =  choose ('Y' IF (PG = %IPGRP%),'N') 
%*
       FN1    = 'EMPLOYEE-ID'               CONSTANT
       FD1    = 'Employee identification c' CONSTANT
       FN2    = 'INV-STR-DATE'              CONSTANT
       FD2    = 'Inverse Start Date'        CONSTANT
       FN3    = 'RATE-REF-CODE'             CONSTANT
       FD3    = 'Rate Reference Code'       CONSTANT
       FN4    = 'SALARY-AMOUNT'             CONSTANT
       FD4    = 'Annual Salary Amount'      CONSTANT
       FN5    = 'CHANGE-REASON'             CONSTANT
       FD5    = 'Change Reason'             CONSTANT
       FN6    = 'DATA-REF-NO'               CONSTANT
       FD6    = 'External Reference Number' CONSTANT
       AUD    = AUDIT-TYPE
       CTYP   = choose ('Y' IF (%ITYP% = SPACES), -
                        'Y' IF (%ITYP% = 'A'), -
                        'Y' IF (%ITYP% = 'C', AUD = 'W'), -
                        'Y' IF (%ITYP% = 'D', AUD = 'D'), -
                        'Y' IF (%ITYP% = 'M', AUD = 'A'), -
                        'Y' IF (%ITYP% = 'M', AUD = 'B'), -
                        'N')
       CUSR   = choose ('Y' IF (%IUSER% = SPACES), -
                        'Y' IF (%IUSER% = USER-ID), -
                        'N')
       ADTE   = DATE-GMT FORMAT (DATE)
       ATIM   = TIME-GMT FORMAT (TIME)
       AUSER  = USER-ID
       APROG  = PROGRAM-NAME
       ATYP   = choose ('Create' IF (AUD = 'W'), -
                        'Delete' IF (AUD = 'D'), -
                        'Modify')
       KEYB1 = before-value (MSF830, KEY-830)
       KEYA1 = after-value (MSF830, KEY-830)
%*
%* Add the Employee Name + Surname
       KEYB1-SNAME = SURNAME OF MSF810 -
                     WHERE (EMPLOYEE-ID = KEYB1)
       KEYB1-FNAME = FIRST-NAME  VIA (KEYB1-SNAME)
       KEYB1-NAME  = catenate (KEYB1-SNAME,' ',KEYB1-FNAME)
       KEYB1-ENAME = OUT-STRING OF MSSCNV -
                     WHERE (OPTION     = 'P', -
                            INP-STRING = KEYB1-NAME)
%*
       KEYA1-SNAME = SURNAME OF MSF810 -
                     WHERE (EMPLOYEE-ID = KEYA1)
       KEYA1-FNAME = FIRST-NAME  VIA (KEYA1-SNAME)
       KEYA1-NAME  = catenate (KEYA1-SNAME,' ',KEYA1-FNAME)
       KEYA1-ENAME = OUT-STRING OF MSSCNV -
                     WHERE (OPTION     = 'P', -
                            INP-STRING = KEYA1-NAME)
%*
       C11    = changed (MSF830, EMPLOYEE-ID)
       F1B1   = before-value (MSF830, EMPLOYEE-ID)
       F1A1   = after-value (MSF830, EMPLOYEE-ID)
       F1Z1   = choose (F1B1 IF (ATYP = 'Delete'), -
                        F1A1 IF (ATYP = 'Create'), -
                        SPACES)

       C21    = changed (MSF830, INV-STR-DATE)
       F2B1   = before-value (MSF830, INV-STR-DATE)
       F2A1   = after-value (MSF830, INV-STR-DATE)
       F2Z1   = choose (F2B1 IF (ATYP = 'Delete'), -
                        F2A1 IF (ATYP = 'Create'), -
                        SPACES)

       C31    = changed (MSF830, RATE-REF-CODE)
       F3B1   = before-value (MSF830, RATE-REF-CODE)
       F3A1   = after-value (MSF830, RATE-REF-CODE)
       F3Z1   = choose (F3B1 IF (ATYP = 'Delete'), -
                        F3A1 IF (ATYP = 'Create'), -
                        SPACES)

       C41    = changed (MSF830, SALARY-AMOUNT)
       F4B1   = before-value (MSF830, SALARY-AMOUNT)
       F4A1   = after-value (MSF830, SALARY-AMOUNT)
       F4Z1   = choose (F4B1 IF (ATYP = 'Delete'), -
                        F4A1 IF (ATYP = 'Create'), -
                        ZERO)

       C51    = changed (MSF830, CHANGE-REASON)
       F5B1   = before-value (MSF830, CHANGE-REASON)
       F5A1   = after-value (MSF830, CHANGE-REASON)
       F5Z1   = choose (F5B1 IF (ATYP = 'Delete'), -
                        F5A1 IF (ATYP = 'Create'), -
                        SPACES)

       C61    = changed (MSF830, DATA-REF-NO)
       F6B1   = before-value (MSF830, DATA-REF-NO)
       F6A1   = after-value (MSF830, DATA-REF-NO)
       F6Z1   = choose (F6B1 IF (ATYP = 'Delete'), -
                        F6A1 IF (ATYP = 'Create'), -
                        SPACES)
