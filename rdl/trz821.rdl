%VARIABLES
       XDAT  = WX-TODAYS-DATE
%* get yesterday
      YDATT = DATE2 of MSSDAT -
               WHERE (OPTION    =  '1',   -
                      DATE1     =  XDAT,  -
                      DAYS      = -1)
%*
%* setup if date range to default
%* i.e. if no input parameter for 'to' date, use yesterday's date (YDATT)
      CDATT = CHOOSE (YDATT IF (%ITODTE% = '        '), -
                      YDATT IF (%ITODTE% = '00000000'), -
                      %ITODTE%) I-PIC (9(8))
%* i.e. if no input parameter for 'from' date, use yesterday's date (YDATT)
      CDATF = CHOOSE (YDATT IF (%IFRDTE% = '        '), -
                      YDATT IF (%IFRDTE% = '00000000'), -
                      %IFRDTE%) I-PIC (9(8))
%* set a variable if required
%* if date on MSF034 file is with the 'from' and 'to' dates,
%* then set print parameter to 'Y'
      CDTE  = CHOOSE ('Y' IF (DATE-GMT >= CDATF AND DATE-GMT <= CDATT), -
                      'N')
%* get employee name
       EMPF   = USER-ID
       EMP    = SUBSTR (EMPF,2,5)       D-PIC (X(5))
       EMPID  = CATENATE ('00000',EMP)  D-PIC (X(10))
       PG     = PAY-GROUP OF MSF820 -
                     WHERE (EMPLOYEE-ID = EMPID)
       SNAME  = SURNAME OF MSF810 - 
                     WHERE (EMPLOYEE-ID = EMPID)
       FNAME  = FIRST-NAME  VIA (SNAME)
       NAME   = CATENATE (SNAME,' ',FNAME)
       ENAME  = OUT-STRING OF MSSCNV -
                     WHERE (OPTION     = 'P', -
                            INP-STRING = NAME)
%*
       PFLAG  =  CHOOSE ('Y' IF (PG = %IPGRP%), 'N') 
%*
       FN1    = 'EMPLOYEE-ID'               CONSTANT
       FD1    = 'Employee identification c' CONSTANT
       FN2    = 'EARNINGS-CODE'             CONSTANT
       FD2    = 'Earnings Code'             CONSTANT
       FN3    = 'EARN-FACTOR'               CONSTANT
       FD3    = 'Rate or Factor to be used' CONSTANT
       FN4    = 'START-DATE'                CONSTANT
       FD4    = 'Starting date'             CONSTANT
       FN5    = 'END-DATE'                  CONSTANT
       FD5    = 'Ending date'               CONSTANT
       FN6    = 'REFERENCE'                 CONSTANT
       FD6    = 'Reference Number'          CONSTANT
       AUD    = AUDIT-TYPE
       CTYP   = CHOOSE ('Y' IF (%ITYP% = SPACES), -
                        'Y' IF (%ITYP% = 'A'), -
                        'Y' IF (%ITYP% = 'C', AUD = 'W'), -
                        'Y' IF (%ITYP% = 'D', AUD = 'D'), -
                        'Y' IF (%ITYP% = 'M', AUD = 'A'), -
                        'Y' IF (%ITYP% = 'M', AUD = 'B'), -
                        'N')
       CUSR   = CHOOSE ('Y' IF (%IUSER% = SPACES), -
                        'Y' IF (%IUSER% = USER-ID), -
                        'N')
       ADTE   = DATE-GMT FORMAT (DATE)
       ATIM   = TIME-GMT FORMAT (TIME)
       AUSER  = USER-ID
       APROG  = PROGRAM-NAME
       ATYP   = CHOOSE ('Create' IF (AUD = 'W'), -
                        'Delete' IF (AUD = 'D'), -
                        'Modify')
       KEYB1 = BEFORE-VALUE (MSF821, KEY-821)
       KEYA1 = AFTER-VALUE (MSF821, KEY-821)
%*
%* Add the Employee Name + Surname
       KEYB1-SNAME = SURNAME OF MSF810 -
                     WHERE (EMPLOYEE-ID = KEYB1)
       KEYB1-FNAME = FIRST-NAME  VIA (KEYB1-SNAME)
       KEYB1-NAME  = CATENATE (KEYB1-SNAME,' ',KEYB1-FNAME)
       KEYB1-ENAME = OUT-STRING OF MSSCNV -
                     WHERE (OPTION     = 'P', -
                            INP-STRING = KEYB1-NAME)
%*
       KEYA1-SNAME = SURNAME OF MSF810 -
                     WHERE (EMPLOYEE-ID = KEYA1)
       KEYA1-FNAME = FIRST-NAME  VIA (KEYA1-SNAME)
       KEYA1-NAME  = CATENATE (KEYA1-SNAME,' ',KEYA1-FNAME)
       KEYA1-ENAME = OUT-STRING OF MSSCNV -
                     WHERE (OPTION     = 'P', -
                            INP-STRING = KEYA1-NAME)
%*
       C11    = CHANGED (MSF821, EMPLOYEE-ID)
       F1B1   = BEFORE-VALUE (MSF821, EMPLOYEE-ID)
       F1A1   = AFTER-VALUE (MSF821, EMPLOYEE-ID)
       F1Z1   = CHOOSE (F1B1 IF (ATYP = 'Delete'), -
                        F1A1 IF (ATYP = 'Create'), -
                        SPACES)

       C21    = CHANGED (MSF821, EARNINGS-CODE)
       F2B1   = BEFORE-VALUE (MSF821, EARNINGS-CODE)
       F2A1   = AFTER-VALUE (MSF821, EARNINGS-CODE)
       F2Z1   = CHOOSE (F2B1 IF (ATYP = 'Delete'), -
                        F2A1 IF (ATYP = 'Create'), -
                        SPACES)

       C31    = CHANGED (MSF821, EARN-FACTOR)
       F3B1   = BEFORE-VALUE (MSF821, EARN-FACTOR)
       F3A1   = AFTER-VALUE (MSF821, EARN-FACTOR)
       F3Z1   = CHOOSE (F3B1 IF (ATYP = 'Delete'), -
                        F3A1 IF (ATYP = 'Create'), -
                        ZERO)

       C41    = CHANGED (MSF821, START-DATE)
       F4B1   = BEFORE-VALUE (MSF821, START-DATE)
       F4A1   = AFTER-VALUE (MSF821, START-DATE)
       F4Z1   = CHOOSE (F4B1 IF (ATYP = 'Delete'), -
                        F4A1 IF (ATYP = 'Create'), -
                        SPACES)

       C51    = CHANGED (MSF821, END-DATE)
       F5B1   = BEFORE-VALUE (MSF821, END-DATE)
       F5A1   = AFTER-VALUE (MSF821, END-DATE)
       F5Z1   = CHOOSE (F5B1 IF (ATYP = 'Delete'), -
                        F5A1 IF (ATYP = 'Create'), -
                        SPACES)

       C61    = CHANGED (MSF821, REFERENCE)
       F6B1   = BEFORE-VALUE (MSF821, REFERENCE)
       F6A1   = AFTER-VALUE (MSF821, REFERENCE)
       F6Z1   = CHOOSE (F6B1 IF (ATYP = 'Delete'), -
