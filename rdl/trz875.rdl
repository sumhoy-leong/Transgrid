%VARIABLES
        XDAT  = WX-TODAYS-DATE
%* get yesterday
      YDATT = DATE2 of MSSDAT -
               where (OPTION    =  '1',   -
                      DATE1     =  XDAT,  -
                      DAYS      = -1)
%*
%* setup if date range to default
%* i.e. if no input parameter for 'to' date, use yesterday's date (YDATT)
      CDATT = choose (YDATT IF (%ITODTE% = '        '), -
                      YDATT IF (%ITODTE% = '00000000'), -
                      %ITODTE%) I-PIC (9(8))
%* i.e. if no input parameter for 'from' date, use yesterday's date (YDATT)
      CDATF = choose (YDATT IF (%IFRDTE% = '        '), -
                      YDATT IF (%IFRDTE% = '00000000'), -
                      %IFRDTE%) I-PIC (9(8))
%* set a variable if required
%* if date on MSF034 file is with the 'from' and 'to' dates,
%* then set print parameter to 'Y'
      CDTE  = choose ('Y' IF (DATE-GMT >= CDATF AND DATE-GMT <= CDATT), -
                      'N')
%* get employee name
       EMPF   = USER-ID
       EMP    = substr (EMPF,2,5)       D-PIC (X(5))
       EMPID  = catenate ('00000',EMP)  D-PIC (X(10))
       SNAME  = SURNAME OF MSF810 - 
                     WHERE (EMPLOYEE-ID = EMPID)
       FNAME  = FIRST-NAME  VIA (SNAME)
       NAME   = catenate (SNAME,' ',FNAME)
       ENAME  = OUT-STRING OF MSSCNV -
                     WHERE (OPTION     = 'P', -
                            INP-STRING = NAME)
%*
       FN1    = 'HIER-DETAILS'              CONSTANT
       FD1    = 'Hierarchy details'         CONSTANT
       FN2    = 'POSITION-ID'               CONSTANT
       FD2    = 'Position Identification C' CONSTANT
       FN3    = 'SUPERIOR-ID'               CONSTANT
       FD3    = 'Position identification o' CONSTANT
       FN4    = 'ACTUAL-ENCUMBS'            CONSTANT
       FD4    = 'Actual encumbants'         CONSTANT
       FN5    = 'AUTHSD-ENCUMBS'            CONSTANT
       FD5    = 'Authorised encumbants'     CONSTANT
       FN6    = 'BUDGET-ENCUMBS'            CONSTANT
       FD6    = 'Budget encumbants'         CONSTANT
       AUD    = AUDIT-TYPE
       CTYP   = choose ('Y' IF (%ITYP% = SPACES), -
                        'Y' IF (%ITYP% = 'A'), -
                        'Y' IF (%ITYP% = 'C', AUD = 'W'), -
                        'Y' IF (%ITYP% = 'D', AUD = 'D'), -
                        'Y' IF (%ITYP% = 'M', AUD = 'A'), -
                        'Y' IF (%ITYP% = 'M', AUD = 'B'), -
                        'N')
       CUSR   = choose ('Y' IF (%IUSER% = SPACES), -
                        'Y' IF (%IUSER% = USER-ID), -
                        'N')
       ADTE   = DATE-GMT FORMAT (DATE)
       ATIM   = TIME-GMT FORMAT (TIME)
       AUSER  = USER-ID
       APROG  = PROGRAM-NAME
       ATYP   = choose ('Create' IF (AUD = 'W'), -
                        'Delete' IF (AUD = 'D'), -
                        'Modify')
       KEYB1 = before-value (MSF875, KEY-875)
       KEYA1 = after-value (MSF875, KEY-875)

       C11    = changed (MSF875, HIER-DETAILS)
       F1B1   = before-value (MSF875, HIER-DETAILS)
       F1A1   = after-value (MSF875, HIER-DETAILS)
       F1Z1   = choose (F1B1 IF (ATYP = 'Delete'), -
                        F1A1 IF (ATYP = 'Create'), -
                        SPACES)

       C21    = changed (MSF875, POSITION-ID)
       F2B1   = before-value (MSF875, POSITION-ID)
       F2A1   = after-value (MSF875, POSITION-ID)
       F2Z1   = choose (F2B1 IF (ATYP = 'Delete'), -
                        F2A1 IF (ATYP = 'Create'), -
                        SPACES)

       C31    = changed (MSF875, SUPERIOR-ID)
       F3B1   = before-value (MSF875, SUPERIOR-ID)
       F3A1   = after-value (MSF875, SUPERIOR-ID)
       F3Z1   = choose (F3B1 IF (ATYP = 'Delete'), -
                        F3A1 IF (ATYP = 'Create'), -
                        SPACES)

       C41    = changed (MSF875, ACTUAL-ENCUMBS)
       F4B1   = before-value (MSF875, ACTUAL-ENCUMBS)
       F4A1   = after-value (MSF875, ACTUAL-ENCUMBS)
       F4Z1   = choose (F4B1 IF (ATYP = 'Delete'), -
                        F4A1 IF (ATYP = 'Create'), -
                        ZERO)

       C51    = changed (MSF875, AUTHSD-ENCUMBS)
       F5B1   = before-value (MSF875, AUTHSD-ENCUMBS)
       F5A1   = after-value (MSF875, AUTHSD-ENCUMBS)
       F5Z1   = choose (F5B1 IF (ATYP = 'Delete'), -
                        F5A1 IF (ATYP = 'Create'), -
                        ZERO)

       C61    = changed (MSF875, BUDGET-ENCUMBS)
